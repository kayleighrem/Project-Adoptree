<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.PersonalizeTreeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText android:id="@+id/tv_tree_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test" />

        <EditText android:id="@+id/et_tree_name"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginStart="24sp"
            android:layout_marginTop="96sp"
            android:layout_marginEnd="24sp"
            android:padding="15sp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/colorInputGrey"
            android:textColor="@color/colorAccentBrown"
            android:hint="@string/tree_name"
            android:inputType="textPersonName" />

        <Button android:id="@+id/ib_tree_color"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/rounded_corners"/>
    </LinearLayout>


</LinearLayout>