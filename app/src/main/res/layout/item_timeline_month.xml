<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView android:id="@+id/tv_rv_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/example_timeline_month"/>

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_timeline_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_timeline_event" />

    <View android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/color_grey"
        tools:ignore="SmallSp" />
</LinearLayout>