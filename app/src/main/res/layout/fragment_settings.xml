<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".ui.fragments.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_settings"
            android:theme="@style/ToolbarTitle"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/header_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:textAllCaps="true"/>
            <Switch
                android:id="@+id/sw_growth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchText"
                android:text="Growth"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="82dp" />
            <Switch
                android:id="@+id/sw_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchText"
                android:text="Humidity"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="82dp" />
            <Switch
                android:id="@+id/sw_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchText"
                android:text="Temperature"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="82dp" />
            <Switch
                android:id="@+id/sw_co2reduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchText"
                android:text="CO2 Reduction"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="82dp" />
            <Switch
                android:id="@+id/sw_co2reductiontips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchText"
                android:text="CO2 Reduction tips"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="82dp" />
            <Switch
                android:id="@+id/sw_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:theme="@style/SwitchText"
                android:text="Events"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="82dp" />

            <LinearLayout
                android:id="@+id/rl_settings_logged_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/header_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    android:textAllCaps="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Language" />
                    <ImageView
                        android:src="@drawable/ic_baseline_check_circle_24"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>