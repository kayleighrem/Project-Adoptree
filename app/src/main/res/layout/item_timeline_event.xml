<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:backgroundTint="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/circle"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.0"
            app:tint="@color/color_redBrown" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/white"
            android:padding="15sp"
            android:layout_marginStart="5sp"
            android:layout_weight="0.9"
            android:orientation="horizontal">
            <TextView android:id="@+id/tv_timeline_event_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/example_timeline_event_date" />
            <TextView android:id="@+id/tv_timeline_event_context"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="@string/example_timeline_event_context" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="26sp"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_star_24" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>