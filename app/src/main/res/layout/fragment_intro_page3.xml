<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".ui.fragments.screens.IntroPage3Fragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="611sp"
        android:layout_centerInParent="true"
        android:padding="16sp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_height="255sp"
            android:gravity="center"
            android:padding="16sp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="77sp"
                android:src="@drawable/logo_adoptiebos_png" />
        </TableRow>

        <TableRow android:layout_height="79sp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="50sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_adopters_number"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="505sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_forests_number"
                android:textSize="60sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_adopters_title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_forests_title"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_height="79sp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="80sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_treeTypes_number"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_trees_number"
                android:textSize="60sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_treeTypes_title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/introPage3_trees_title"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16sp">

            <Button
                android:id="@+id/finish"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:text="@string/introPage3_button_startNow"
                android:theme="@style/CustomButtonStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />
        </TableRow>

    </TableLayout>

</RelativeLayout>